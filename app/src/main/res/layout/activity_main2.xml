<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".Main2Activity">

    <TextView
            android:text="@string/location"
            android:textSize="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_below="@id/imageView5"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="247dp"
            android:layout_height="47dp"
            android:inputType="textPostalAddress"
            android:ems="5"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/editLocation"/>
    <ImageView
            android:layout_width="91dp"
            android:layout_height="106dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/cov" android:id="@+id/imageView5" android:layout_marginTop="3dp"/>
    <TextView
            android:text="@string/welcome_anonymous"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="51dp" app:srcCompat="@drawable/text"
            android:id="@+id/imageView3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:onClick="call_msg"
    />
    <EditText
            android:layout_width="247dp"
            android:layout_height="47dp"
            android:inputType="textPostalAddress"
            android:ems="5"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
             android:id="@+id/editActivity"/>
    <TextView
            android:text="ACTIVITY"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@id/editLocation"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="SEND"
            android:textSize="50px"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSend"
            android:layout_below="@id/editActivity"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Official use only"
            android:textSize="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="call_login"
            android:id="@+id/textView5"
            android:layout_below="@id/buttonSend"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            />
</RelativeLayout>